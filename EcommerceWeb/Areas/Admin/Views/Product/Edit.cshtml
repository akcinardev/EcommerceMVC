@model Product

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-warning">Edit Product</h2>
		</div>
	</div>

	<div class="mb-3">
		<label asp-for="Title"></label>
		<input asp-for="Title" type="text" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="Description"></label>
		<input asp-for="Description" type="text" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="ISBN"></label>
		<input asp-for="ISBN" type="text" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="Author"></label>
		<input asp-for="Author" type="text" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="ListPrice"></label>
		<input asp-for="ListPrice" type="text" class="form-control" />
	</div>

	<div class="row">
		<div class="col-6">
			<a asp-controller="Product" asp-action="Index" class="btn btn-info form-control">Back to List</a>
		</div>
		<div class="col-6">
			<button type="submit" class="btn btn-warning form-control">Update</button>
		</div>
	</div>
</form>