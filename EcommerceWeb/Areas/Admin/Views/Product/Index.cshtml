@model List<Product>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2>Product List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">New <i class="bi bi-plus-circle"></i></a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Title
			</th>
			<th>
				Description
			</th>
			<th>
				ISBN
			</th>
			<th>
				Author
			</th>
			<th>
				Category
			</th>
			<th>
				Price
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>@product.Title</td>
				<td>@product.Description</td>
				<td>@product.ISBN</td>
				<td>@product.Author</td>
				<td>@product.Category.Name</td>
				<td>@product.ListPrice €</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a class="btn btn-primary mx-2" asp-controller="Product" asp-action="Upsert" asp-route-id="@product.Id">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a class="btn btn-secondary mx-2" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">
							<i class="bi bi-trash3-fill"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>