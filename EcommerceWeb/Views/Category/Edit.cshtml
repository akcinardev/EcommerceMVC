@model Ecommerce.Models.Category

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-warning">Edit Category</h2>
		</div>
	</div>

	<div class="mb-3">
		<label asp-for="Name"></label>
		<input asp-for="Name" type="text" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="DisplayOrder"></label>
		<input asp-for="DisplayOrder" type="text" class="form-control" />
	</div>

	<div class="row">
		<div class="col-6">
			<a asp-controller="Category" asp-action="Index" class="btn btn-info form-control">Back to List</a>
		</div>
		<div class="col-6">
			<button type="submit" class="btn btn-warning form-control">Update</button>
		</div>
	</div>
</form>